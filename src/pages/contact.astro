---
import Main from "../layout/Main.astro";
---

<Main>
    <main>
        <h2 class="text-center text-2xl py-8">Contact Us</h2>
        <form class="flex flex-col justify-center max-w-md mx-auto">
            <div class="flex flex-col">
                <label for="name">Name</label>
                <input type="text" class="border-2 border-gray-600 rounded p-2 mb-4" id="name" placeholder="Enter name..." />
            </div>
            <div class="flex flex-col">
                <label for="email">Email address</label>
                <input type="email" class="border-2 border-gray-600 rounded p-2 mb-4" id="email" placeholder="Enter email..." />
            </div>
            <div class="flex flex-col">
                <label for="message">Message</label>
                <textarea class="border-2 border-gray-600 rounded resize-none p-2" id="message" rows="3"></textarea>
            </div>
            <button type="submit" class="mt-6 bg-blue-800 w-1/4 py-2 text-white font-bold rounded-lg mx-auto">Submit</button>
        </form>
    </main>
</Main>